[alias]
	aa = add --all
	amend = commit --amend
	br = branch
	cm = commit -m
	co = checkout
	dc = diff --cached
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	loc = !git diff --stat `git hash-object -t tree /dev/null` | tail -1 | cut -d' ' -f5
	glog = log -E -i --grep
	pick = cherry-pick
	pr = pull-request
	st = status -sb
	sum = log --oneline --no-merges
	unstage = reset
	uncommit = reset --soft HEAD^
	hreset = !git reset --hard $(git rev-parse --abbrev-ref --symbolic-full-name @{u})
[branch]
	autosetuprebase = always
[color]
	ui = true
[color "diff"]
	meta = bold cyan
[color "grep"]
	filename = magenta
	match = bold red
	linenumber = bold blue
[commit]
	template = ~/.gitmessage
[core]
	excludesfile = ~/.gitignore
[fetch]
	prune = true
[grep]
	linenumber = true
[init]
	templatedir = ~/.git_template
[merge]
	ff = only
[push]
	default = current
[rebase]
	autosquash = true
